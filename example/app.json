{
  "expo": {
    "name": "react-native-background-user-location-example",
    "slug": "react-native-background-user-location-example",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "expo.modules.backgrounduserlocation.example",
      "infoPlist": {
        "UIBackgroundModes": ["location"],
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Allow $(PRODUCT_NAME) to use your location even when the app is not in use.",
        "NSLocationWhenInUseUsageDescription": "Allow $(PRODUCT_NAME) to use your location while you are using the app.",
        "NSLocationAlwaysUsageDescription": "Allow $(PRODUCT_NAME) to use your location in the background."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "expo.modules.backgrounduserlocation.example"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}